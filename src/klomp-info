#!/usr/bin/perl
use strict;
use warnings;
use lib "/opt/klomp/lib";
use Klomp::Files;

my $atts = join "|", qw(album artist number title);

my $usage = "Usage:
  $0 [-n] [ARG ARG ARG ..]
    print values for ARGs, separated by spaces

  ARG   [playlist|$atts]
  -n    do not output a trailing newline
";

sub main(@){
  my $newline = 1;
  if(@_ > 0 and $_[0] eq '-n'){
    $newline = 0;
    shift;
  }

  my $curFile = Klomp::Files::klompFile("cur");
  my $cur = `cat $curFile`;

  my @info;
  for my $arg(@_){
    if($arg eq 'playlist'){
      my $pl = `klomp-cmd playlist`;
      chomp $pl;
      push @info, "<$pl>" if $pl ne 'main';
    }elsif($arg =~ /^($atts)$/){
      push @info, $1 if $cur =~ /^$arg=(.*)$/m;
    }else{
      die "Usage: $0 [arg arg arg]\n\n";
    }
  }
  print join ' ', @info;
  print "\n" if $newline;
}

&main(@ARGV);
